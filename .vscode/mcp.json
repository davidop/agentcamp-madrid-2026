{
  "inputs": [
    {
      "type": "promptString",
      "id": "mcp-azure-function-key",
      "description": "Azure Function Key to access the MCP server on Azure",
      "password": true
    },
    {
      "type": "promptString",
      "id": "mcp-azure-function-name",
      "description": "Azure Function name to access the MCP server on Azure"
    }
  ],
  "servers": {
    "playwright": {
      "command": "npx",
      "args": ["@playwright/mcp@latest"]
    },
    "mcp-mermaid": {
      "command": "npx",
      "args": ["-y", "mcp-mermaid"]
    },
    "remote-mcp-azure-function": {
      "type": "sse",
      "url": "https://agentcampmcp-hharhnf3hja5g0dm.westeurope-01.azurewebsites.net/runtime/webhooks/mcp/sse",
      "headers": {
        "x-functions-key": "${input:mcp-azure-function-key}"
      }
    },
    "github-agentic-workflows": {
      "command": "gh",
      "args": ["aw", "mcp-server"],
      "cwd": "${workspaceFolder}"
    },
    "aspire": {
      "command": "dotnet",
      "args": ["aspire", "mcp", "stdio"],
      "cwd": "${workspaceFolder}"
    }
  }
}
